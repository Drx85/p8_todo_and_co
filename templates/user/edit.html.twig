{% extends 'base.html.twig' %}

{% block header_title %}<h1>Modifier <strong>{{ user.username }}</strong></h1>{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
    <div class="row mt-2">
        {{ form_start(form, {'action' : path('user_edit', {'id' : user.id})}) }}
		<div class="mb-3">
			{{ form_row(form.username) }}
		</div>
		<div class="mb-3">
			{{ form_row(form.email) }}
		</div>
		<div class="mb-3">
			{{ form_rest(form) }}
		</div>

        <button type="submit" class="btn btn-success mt-3">Modifier</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
