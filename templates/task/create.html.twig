{% extends 'base.html.twig' %}

{% block body %}
	<div class="row mt-2">
		{{ form_start(form, {'action' : path('task_create')}) }}
		<div class="mb-3">
			{{ form_row(form.title) }}
		</div>
		<div class="mb-3">
			{{ form_row(form.content) }}
		</div>
		<a href="{{ path('task_list') }}" class="btn btn-primary mt-3">Retour à la liste des tâches</a>
		<button type="submit" class="btn btn-success mt-3">Ajouter</button>
		{{ form_end(form) }}
	</div>
{% endblock %}
